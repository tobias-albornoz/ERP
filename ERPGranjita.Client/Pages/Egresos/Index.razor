@page "/egresos"
@layout ERPGranjita.Client.Pages.Egresos.EgresosLayout

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 justify-content-center" style="max-width: 700px; width: 100%; border-radius: 2rem;">
        <div class="text-center mb-4">
            <h2 class="mb-3" style="color: #C80000;">
                <i class="bi bi-box-arrow-down-left"></i> Módulo de Egresos
            </h2>
            <p class="lead mb-4">Selecciona una acción:</p>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-md-6">
                <NavLink href="/egresos/compra" class="text-decoration-none">
                    <div class="card card-marca rojo text-center h-100" style="cursor:pointer;">
                        <div class="card-body">
                            <i class="bi bi-cart-plus display-4"></i>
                            <h4 class="card-title mt-2">Cargar Compra</h4>
                            <p class="card-text">Registrar una nueva compra de productos.</p>
                        </div>
                    </div>
                </NavLink>
            </div>
            <div class="col-md-6">
                <NavLink href="/egresos/proveedores" class="text-decoration-none">
                    <div class="card card-marca naranja text-center h-100" style="cursor:pointer;">
                        <div class="card-body">
                            <i class="bi bi-person-plus display-4"></i>
                            <h4 class="card-title mt-2">Cargar Proveedor</h4>
                            <p class="card-text">Registrar un nuevo proveedor.</p>
                        </div>
                    </div>
                </NavLink>
            </div>
        </div>
    </div>
</div>
@code {
    private VentaDiaria venta = new()
    {
        Fecha = DateTime.Now,
        DetallesVentaDiaria = new List<DetalleVentaDiaria>(),
        TicketsError = new List<TicketError>(),
        Senias = new List<Senia>(),
        CierresDeBalanza = new List<CierreDeBalanza>()
    };

    private List<FormaPago> formasPago = new();
    private List<PuntoDeVenta> puntosDeVenta = new();
    private List<VentaDiaria>? ventasRealizadas;

    protected override async Task OnInitializedAsync()
    {
        formasPago = await Http.GetFromJsonAsync<List<FormaPago>>("api/formaspago") ?? new();
        puntosDeVenta = await Http.GetFromJsonAsync<List<PuntoDeVenta>>("api/puntosdeventa") ?? new();
        // ventasRealizadas = await Http.GetFromJsonAsync<List<VentaDiaria>>("api/ventasdiarias") ?? new();
    }

    // Detalles de venta
    private void AgregarDetalle() => venta.DetallesVentaDiaria.Add(new DetalleVentaDiaria());
    private void QuitarDetalle(DetalleVentaDiaria detalle) => venta.DetallesVentaDiaria.Remove(detalle);

    // TicketError
    private void AgregarTicketError() => venta.TicketsError.Add(new TicketError { Fecha = DateTime.Now });
    private void QuitarTicketError(TicketError ticket) => venta.TicketsError.Remove(ticket);

    // Senia
    private void AgregarSenia() => venta.Senias.Add(new Senia { Fecha = DateTime.Now });
    private void QuitarSenia(Senia senia) => venta.Senias.Remove(senia);

    // Cierre de Balanza
    private void AgregarCierreBalanza() => venta.CierresDeBalanza.Add(new CierreDeBalanza { Fecha = DateTime.Now });
    private void QuitarCierreBalanza(CierreDeBalanza cierre) => venta.CierresDeBalanza.Remove(cierre);

    private async Task GuardarVenta()
    {
        // Actualiza los valores calculados
        venta.SaldoFinal = venta.CalcularSaldoFinal();
        venta.TotalBalanzas = venta.CalcularTotalBalanzas();

        var response = await Http.PostAsJsonAsync("api/ventasdiarias", venta);
        if (response.IsSuccessStatusCode)
        {
            venta = new()
            {
                Fecha = DateTime.Now,
                DetallesVentaDiaria = new List<DetalleVentaDiaria>(),
                TicketsError = new List<TicketError>(),
                Senias = new List<Senia>(),
                CierresDeBalanza = new List<CierreDeBalanza>()
            };
            ventasRealizadas = await Http.GetFromJsonAsync<List<VentaDiaria>>("api/ventasdiarias") ?? new();
            StateHasChanged();
        }
    }
}